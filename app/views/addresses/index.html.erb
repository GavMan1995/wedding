

<div class="row" style="margin: 0;">
  <div class="col s12 l4 left brown lighten-5" style=" padding: 1%;">
    <p class="center pink-text text-lighten-3" style="font-size: 20px;">Please fill out your address and information to recieve an invitation to our wedding</p>
    <h5 class="center grey-text">Thank You :)</h5>
    <%= form_for @address do |f| %>

      <div class=" col s12 m12 l6">
        <%= f.label :First_Name %>
        <%= f.text_field :first_name, placeholder: "required", autofocus: true, required: true %>
      </div>

      <div class=" col s12 m12 l6">
        <%= f.label :Last_Name %>
        <%= f.text_field :last_name, placeholder: "required", required: true %>
      </div>
      <br/>
      <br/>
      <br/>
      <br/>

        <%= f.label :street %>
        <%= f.text_field :street, placeholder: "required", required: true %>

        <%= f.label :city %>
        <%= f.text_field :city, placeholder: "required", required: true %>

        <%= f.label :state %>
        <%= f.text_field :state, placeholder: "required", required: true %>

        <%= f.label :zip %>
        <%= f.number_field :zip, placeholder: "required", required: true %>

        <%= f.label :country %>
        <%= f.text_field :country, placeholder: "required", required: true %>

      <button class="btn pink lighten-4" type="submit" name="button"> Save Address </button>

    <% end %>
  </div>

  <div class="col s8 right hide-on-med-and-down" style="margin: 0; padding: 0; border: 0;">
    <img src="<%= image_path("jessica.jpg") %>" style="width: 100%; padding: 1%;" />
  </div>
</div>
