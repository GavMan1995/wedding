<table class="table-responsive striped">
  <thead>
    <th>id/number</th>
    <th>first name</th>
    <th>last name</th>
    <th>street</th>
    <th>city</th>
    <th>state</th>
    <th>zip</th>
    <th>country</th>
  </thead>

  <tbody>
    <% @addresses.each do |a| %>
    <tr>
      <td><%= a.id %></td>
      <td><%= a.first_name %></td>
      <td><%= a.last_name %></td>
      <td><%= a.street %></td>
      <td><%= a.city %></td>
      <td><%= a.state %></td>
      <td><%= a.zip %></td>
      <td><%= a.country %></td>
  </tr>
  <% end %>
  </tbody>
</table>
